@using Microsoft.AspNetCore.Identity
@using MVC_TDPC13.DB.Entities
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Explor";
}

<div class="text-center pasticcio">
    <h2 class="display-6">Scegli il tuo pacchetto</h2>
</div>

<div class="col-sm-12">
    <div class="card" style="width:100%">
        <img class="card-img-top" src="~/Src/villaggio.jpg" alt="VILLAGGIO 1" style="width:100%">
        <div class="card-body">
            <h4 class="card-title">Pacchetto Villaggio Eden</h4>
            <p class="card-text"><b>Target: </b>"Single"</p>
            <button class="btn btn-sm btn-primary m-3" data-bs-toggle="collapse" data-bs-target="#villaggio1">Dettagli</button>
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
            {
                <div id="v1">
                    <input id="idVillage" type="text" value="villaggio1" hidden></input>
                    <div class="mb-2">
                        <label>Persone: </label>
                        <input id="posti" type="number" name=""></input>
                    </div>
                    <div>
                        <label>Periodo: </label>
                        <input id="settimana" type="week" name=""></input>
                    </div>
                    <button class="btn btn-sm btn-success m-3 btn-prenotazione" data-div="v1" onclick="ButtonClick(this)">Prenota</button>
                </div>
            }
            <div id="villaggio1" class="collapse">
                 Un Villaggio super esclusivo riservato ai single che cercano la vacanza perfetta dove poter trovare l'anima gemella 
                 o semplicemente una settimana ricca di divertimento e relax.
                 Sono previste serate a tema e giochi Speed dating.
                <p class="card-text mt-4"><b>PREZZO SETTIMANALE: </b> 600€</p>
                <p class="card-text">Il prezzo è da intendersi a persona da Lunedi a Domenica</p>
                <p class="card-text">Confezione da 24 profilattici inclusa :D</p>
            </div>
        </div>
    </div>
    <br>
</div>

